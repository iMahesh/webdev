<% include ../partials/header %>



<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our handpicked campgrounds all around the world</p>
                <p>
                    <a class="btn btn-success btn-large" href="/campgrounds/new">Add a new camground</a>
                </p>
            </div>
        </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>our most popular campgrounds</h3>
        </div>
    </div>
    
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>"></img>
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p class="text-right">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-info"> More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

    <% include ../partials/footer %>

</div>